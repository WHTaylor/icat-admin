{
  "private": true,
  "name": "icat-admin",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch",
    "lint": "eslint src",
    "e2e": "cypress run"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ],
    "rules": {
      "prefer-template": "off",
      "radix": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "_+"
        }
      ],
      "jest/no-deprecated-functions": "off"
    }
  },
  "devDependencies": {
    "cypress": "^12.16.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^4.1.0",
    "eslint": "^8.39.0",
    "eslint-config-preact": "^1.1.0",
    "netlify-plugin-cypress": "^2.2.0",
    "preact-cli": "^3.0.0",
    "sirv-cli": "2.0.2"
  },
  "dependencies": {
    "@tanstack/react-query": "^4.29.19",
    "dayjs": "^1.11.3",
    "preact": "^10.3.2",
    "preact-render-to-string": "^6.0.2",
    "preact-router": "^4.1.0",
    "typescript": "^5.0.4"
  }
}
