{
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "es6",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "noEmit": true,
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "react": ["./node_modules/preact/compat"],
            "react-dom": ["./node_modules/preact/compat"]
        },
        "strictNullChecks": true
    },
    "include": ["src/**/*"]
}
