{
  "private": true,
  "name": "icat-admin",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite --port 8080",
    "preview": "vite preview --port 8080",
    "lint": "eslint src",
    "e2e": "cypress run"
  },
  "eslintConfig": {
    "extends": [
      "preact",
      "plugin:@tanstack/eslint-plugin-query/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ],
    "rules": {
      "prefer-template": "off",
      "radix": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "_+"
        }
      ],
      "jest/no-deprecated-functions": "off"
    }
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.28.1",
    "cypress": "^13.6.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^4.1.0",
    "eslint": "^8.39.0",
    "eslint-config-preact": "^1.1.0",
    "netlify-plugin-cypress": "^2.2.0"
  },
  "dependencies": {
    "@preact/preset-vite": "^2.8.2",
    "@tanstack/react-query": "^5.28.1",
    "dayjs": "^1.11.3",
    "preact": "^10.3.2",
    "preact-render-to-string": "^6.0.2",
    "preact-router": "^4.1.0",
    "typescript": "^5.0.4",
    "vite": "^5.2.8"
  }
}
